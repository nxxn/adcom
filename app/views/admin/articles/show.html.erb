<section>
  <div class="container">
    <div class="col-sm-12">

      <%= link_to "Back", admin_articles_path, class: "admin_article_back" %>
      |
      <%= link_to "Edit", edit_admin_article_path(@article), class: "admin_article_edit" %>
      |
      <%= link_to "Delete", admin_article_path(@article), :confirm => 'Are you sure?', :method => :delete, class: "admin_article_delete" %>

      <h1 class="section-heading">
        <%= @article.title %>
      </h1>

      <% if @article.pdf %>
        <div class="col-sm-12 article_document_container padding_top_twenty_px">
          <embed src="<%= @article.document %>" width="100%" height="100%">
        </div>
      <% else %>
        <div class="col-sm-12 trocchi article_text padding_top_twenty_px">
          <p>
            <%= @article.text.html_safe %>
          </p>
        </div>
      <% end %>

      <hr>

      <span class="publishdate_admin" itemprop="datePublished">
        <%= l(@article.created_at, :format => '%d %B %Y') %>
      </span>

    </div>
  </div>
</section>
